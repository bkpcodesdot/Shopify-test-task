<div 
  class="hero-banner"
  {% if section.settings.background_image != blank %}
    style="background-image: url({{ section.settings.background_image | image_url: width: 2000 }});"
  {% endif %}
>
  <div class="hero-banner__overlay page-width">
    <div class="hero-banner__content">
      {% if section.settings.heading != blank %}
        <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="hero-banner__description hero-desc-desktop">{{ section.settings.description }}</p>
      {% endif %}

      {% if section.settings.mobile_description != blank %}
        <p class="hero-banner__description hero-desc-mobile">{{ section.settings.mobile_description }}</p>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-banner__button">
          {{ section.settings.button_text }}
          {% if section.settings.button_icon != blank %}
            <img 
                src="{{ section.settings.button_icon | image_url: width: 30 }}" 
                alt="button icon" 
                class="hero-banner__icon"
                width=""
                height=""
            >
          {% endif %}
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.button_text != blank %}
    <a href="{{ section.settings.button_link }}" class="hero-banner__button abs">
      {{ section.settings.button_text }}
      {% if section.settings.button_icon != blank %}
        <img 
            src="{{ section.settings.button_icon | image_url: width: 30 }}" 
            alt="button icon" 
            class="hero-banner__icon"
            width=""
            height=""
        >
      {% endif %}
    </a>
  {% endif %}
</div>

{% if section.settings.bottom_line != blank %}
  <div class="hero-banner__bottom bottom-desktop">
    {{ section.settings.bottom_line }}
  </div>
{% endif %}

{% if section.settings.mobile_bottom_line != blank %}
  <div class="hero-banner__bottom bottom-mobile">
    {{ section.settings.mobile_bottom_line }}
  </div>
{% endif %}

<style>
.hero-banner {
  background-size: cover;
  background-position: center;
}

/* Default â†’ show desktop text */
.hero-desc-mobile,
.bottom-mobile {
  display: none;
}

/* Mobile background + text swap */
@media (max-width: 425px) {
  .hero-banner {
    {% if section.settings.mobile_background_image != blank %}
      background-image: url({{ section.settings.mobile_background_image | img_url:"master" }}) !important;
    {% endif %}
  }

  .hero-desc-desktop,
  .bottom-desktop {
    display: none;
  }
  .hero-desc-mobile,
  .bottom-mobile {
    display: block;
  }
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Mobile Background Image (max 425px)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (H1)",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description (Desktop)",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "textarea",
      "id": "mobile_description",
      "label": "Description (Mobile)",
      "default": "Shop the best holiday gifts, handpicked just for you."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "button_icon",
      "label": "Button Icon"
    },
    {
      "type": "text",
      "id": "bottom_line",
      "label": "Bottom Line (Desktop)",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "text",
      "id": "mobile_bottom_line",
      "label": "Bottom Line (Mobile)",
      "default": "Eco-friendly fashion for every size"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Banner"
    }
  ]
}
{% endschema %}
